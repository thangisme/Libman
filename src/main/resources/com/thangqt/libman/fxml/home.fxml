<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Priority?>

<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<GridPane xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
          fx:controller="com.thangqt.libman.controller.HomeController">
    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
    </columnConstraints>
    <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" spacing="10">
        <Text>Total materials</Text>
        <Text fx:id="totalMaterialsNum">N/N</Text>
    </VBox>
    <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="10">
        <Text>Borrowed</Text>
        <Text fx:id="borrowedNum">N/N</Text>
    </VBox>
    <VBox GridPane.columnIndex="2" GridPane.rowIndex="0" spacing="10">
        <Text>Overdue</Text>
        <Text fx:id="overdueNum">N/N</Text>
    </VBox>
    <VBox GridPane.columnIndex="3" GridPane.rowIndex="0" spacing="10">
        <Text>Total users</Text>
        <Text fx:id="totalUsersNum">N/N</Text>
    </VBox>
    <VBox GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="1" fx:id="checkoutStatsContainer">
    </VBox>
    <VBox GridPane.columnSpan="2" GridPane.columnIndex="2" GridPane.rowIndex="1" fx:id="overdueTableContainer">
    </VBox>
</GridPane>