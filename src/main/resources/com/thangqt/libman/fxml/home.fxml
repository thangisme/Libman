<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Priority?>

<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import atlantafx.base.controls.Card?>
<?import javafx.scene.control.Label?>

<GridPane xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS"
          fx:controller="com.thangqt.libman.controller.HomeController">
    <columnConstraints>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
        <ColumnConstraints percentWidth="25"/>
    </columnConstraints>
    <Card GridPane.columnIndex="0" GridPane.rowIndex="0">
        <header>
            <Label text="Total materials" styleClass="title-4"/>
        </header>
        <body>
            <Text fx:id="totalMaterialsNum">N/N</Text>
        </body>
    </Card>
    <Card GridPane.columnIndex="1" GridPane.rowIndex="0">
        <header>
            <Label styleClass="title-4">Borrowed</Label>
        </header>
        <body>
            <Text fx:id="borrowedNum">N/N</Text>
        </body>
    </Card>
    <Card GridPane.columnIndex="2" GridPane.rowIndex="0">
        <header>
            <Label styleClass="title-4">Overdue</Label>
        </header>
        <body>
            <Text fx:id="overdueNum">N/N</Text>
        </body>
    </Card>
    <Card GridPane.columnIndex="3" GridPane.rowIndex="0">
        <header>
            <Label styleClass="title-4">Total users</Label>
        </header>
        <body>
            <Text fx:id="totalUsersNum">N/N</Text>
        </body>
    </Card>
    <VBox GridPane.columnSpan="2" GridPane.columnIndex="0" GridPane.rowIndex="1" fx:id="checkoutStatsContainer">
    </VBox>
    <VBox GridPane.columnSpan="2" GridPane.columnIndex="2" GridPane.rowIndex="1" alignment="CENTER" spacing="15">
        <Text GridPane.halignment="CENTER" styleClass="title-4">Overdue materials</Text>
        <VBox fx:id="overdueTableContainer">
        </VBox>
    </VBox>
    <VBox GridPane.columnSpan="3" GridPane.columnIndex="0" GridPane.rowIndex="2" alignment="CENTER" spacing="15">
        <Text GridPane.halignment="CENTER" styleClass="title-4">Recently borrowed materials</Text>
        <VBox fx:id="recentlyBorrowedTableContainer">
        </VBox>
    </VBox>
    <VBox GridPane.columnIndex="3" GridPane.rowIndex="2" alignment="CENTER" spacing="15">
        <Text GridPane.halignment="CENTER" styleClass="title-4">Recently added materials</Text>
        <VBox fx:id="recentlyAddedMaterialsContainer">
        </VBox>
    </VBox>
</GridPane>